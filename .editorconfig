root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,h,hpp}]
indent_size = 4
indent_style = space

[*.proto]
indent_size = 4
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[{CMakeLists.txt,*.cmake,*.cmake.in}]
indent_size = 2
indent_style = space
